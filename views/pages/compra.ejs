<%- contentFor('heros') %>
<section class="hero">
    <div class="hero-content">
        <h2>Compra de Dólar</h2>
        <a href="/" class="btn btn-lg btn-primary">Inicio</a>
        <a href="/compra" class="btn btn-lg btn-primary">Compra</a>
        <a href="/venta" class="btn btn-lg btn-primary">Venta</a>
        <a href="/reporte" class="btn btn-lg btn-primary">Reporte</a>
    </div>
</section>

<%- contentFor('body') %>
<br>
<br>
<br>
<br>
<br>
<div class="row">
    <div class="column">
        <div><h2>Tipo de Cambio</h2>
        <h3>Compra: $ <%= compra %></h3>
        <h3>Venta: $ <%= venta%></h3></div>            
    </div>    
    <div class="column">
        <div><h2>En Caja</h2>
        <h3>USD: $ <%= iniciodolar%></h3>
        <h3>Pesos: $ <%= iniciopesos%></h3></div>            
    </div> 
</div>

<div class="jumbotron text-center" style="background-color: rgb(28, 28, 120);">
    <h2>Comprar Dólar al Cliente</h2>
    <div class="row">
      <div class="col-sm-6 col-sm-offset-3">
  
        <form action="/compra" method="POST">
  
          <div class="form-group">
            <label>¿Cuantos dólares deseas comprar?</label>
            <input type="number" min="0.01" step="0.01" name="dolar" class="form-control" required placeholder="00.00">
          </div>
          <div class="form-group">
            <label>¿Con cuantos dólares está pagando el cliente?</label>
            <input type="number" min="0.01" step="0.01" name="pago" class="form-control" required placeholder="00.00">
          </div>

          <div class="form-group text-center">
            <button type="submit" class="btn">Cambiar</button>
          </div>
  
        </form>
      </div>
    </div>
  </div>

<h2>Dolares Comprados en la última transacción: </h2>
<h2>$ <%= dolaresC%></h2>
<h2>El cliente pagó con: </h2>
<h2>$ <%= pagocliente%></h2>
<h2>Sobrante en Dólar: </h2>
<h2>$ <%= residuo%></h2>
<h2>Total en Pesos: </h2>
<h2>$ <%= totalC%></h2>

